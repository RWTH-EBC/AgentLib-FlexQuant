import shutil
import os

bDebug: bool = True


def clear_gen_files() -> None:
    print(">> Starting deletion of old generated files")

    rootPath = os.path.join(os.getcwd().split("flexquant", 1)[0], "flexquant")

    examples: list[str] = ["OneRoom_SimpleMPC",
                           "SimpleTesthall"]

    folders: list[str] = ["created_flex_files",
                          "plots",
                          "results"]

    files: list[str] = ["nlp_hess_l.casadi"]

    for example in examples:
        for folder in folders:
            path: str = os.path.join(rootPath, "Examples", example, folder)
            if os.path.exists(path):
                if bDebug: print(f"{'deleting:':>14} {path}")
                shutil.rmtree(path=path)

        for file in files:
            path: str = os.path.join(rootPath, "Examples", example, file)
            if os.path.exists(path):
                if bDebug: print(f"{'deleting:':>14} {path}")
                os.remove(path=path)

    print(">> successfully finished")


if __name__ == "__main__":
    clear_gen_files()
